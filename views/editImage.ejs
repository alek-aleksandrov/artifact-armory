<!DOCTYPE html>
<html>
<head>
	<% include partials/header %>
</head>
<body>
	<% include partials/nav %>


	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">
				<h3 class="text-center">Edit Your Profile</h3>
				<% if (message.length > 0) { %>
			        <div class="alert alert-danger"><%= message %></div>
			    <% } %>
				<form action="/profile/<%= locals.user %>/edit/updateImage" method="POST" enctype="multipart/form-data">
					<div class="form-group row">
						<label>Edit Your Profile Image</label>
						<input type="file" class="form-control" name="file" class="">
						<span class="hint">Supported files: jpg, jpeg, png.</span>
					</div>
					<input type="submit" name="submit" class="btn btn-default">
				</form>
			</div>
		</div>
	</div>


	<% include partials/footer%>
</body>
</html>